@model IEnumerable<CourseEnrollmentSystem.Domain.Entities.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Courses Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Course
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th class="text-center">Max Capacity</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td><strong>@course.Title</strong></td>
                                <td>@(string.IsNullOrEmpty(course.Description) ? "No description" : course.Description)</td>
                                <td class="text-center"><span class="badge bg-info">@course.MaxCapacity</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning me-1">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <nav aria-label="Course pagination" class="mt-3">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
            </li>

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            }
        </ul>
    </nav>

    <hr class="my-4" />

    <div class="mt-4">
        <h4 class="text-secondary mb-3">Course Details</h4>
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    @await Html.PartialAsync("_CourseDetails", course)
                </div>
            }
        </div>
    </div>
</div>
