@model CourseEnrollmentSystem.Domain.Entities.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Course</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Are you sure?</h5>
                        <p>Are you sure you want to delete the following course?</p>
                    </div>

                    <div class="mb-3">
                        <dl class="row">
                            <dt class="col-sm-4">Title:</dt>
                            <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                            <dt class="col-sm-4">Description:</dt>
                            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                            <dt class="col-sm-4">Capacity:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info">@Model.MaxCapacity</span></dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Yes, Delete Course</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
