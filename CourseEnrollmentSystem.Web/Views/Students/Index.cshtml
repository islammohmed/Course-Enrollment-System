@model IEnumerable<CourseEnrollmentSystem.Domain.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Students Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Student
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Birth Date</th>
                            <th>National ID</th>
                            <th>Phone Number</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td><strong>@student.FullName</strong></td>
                                <td>@student.Email</td>
                                <td>@student.BirthDate.ToString("yyyy-MM-dd")</td>
                                <td>@student.NationalId</td>
                                <td>@(string.IsNullOrEmpty(student.PhoneNumber) ? "N/A" : student.PhoneNumber)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning me-1">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
