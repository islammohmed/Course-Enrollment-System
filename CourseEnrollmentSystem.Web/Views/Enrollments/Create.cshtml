@{
    ViewData["Title"] = "Enroll Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Enroll Student in Course</h3>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading">Enrollment Error</h5>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">Select Student <span class="text-danger">*</span></label>
                            <select name="studentId" class="form-select" asp-items="ViewBag.Students">
                                <option value="">-- Select a Student --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Select Course <span class="text-danger">*</span></label>
                            <select name="courseId" class="form-select" asp-items="ViewBag.Courses">
                                <option value="">-- Select a Course --</option>
                            </select>
                        </div>

                        <div id="slotsInfo" class="alert alert-info" style="display:none;" role="alert">
                            <strong>Available Slots:</strong> <span id="slotsCount"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Enroll Student</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('select[name="courseId"]').change(function () {
                const courseId = $(this).val();
                if (!courseId) {
                    $('#slotsInfo').hide();
                    return;
                }
                $.get('/Enrollments/GetAvailableSlots', { courseId: courseId })
                    .done(function (data) {
                        $('#slotsCount').text(data);
                        $('#slotsInfo').show();
                        if (data <= 0) {
                            $('#slotsInfo').removeClass('alert-info').addClass('alert-danger');
                        } else {
                            $('#slotsInfo').removeClass('alert-danger').addClass('alert-info');
                        }
                    })
                    .fail(function () {
                        $('#slotsCount').text('Error loading slots');
                        $('#slotsInfo').removeClass('alert-info').addClass('alert-danger').show();
                    });
            });

            // Trigger on page load if a course is already selected
            if ($('select[name="courseId"]').val()) {
                $('select[name="courseId"]').trigger('change');
            }
        });
    </script>
}